<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="15"
                 android:weightSum="100"
         >
      <Spinner
            android:id="@+id/spinnerApi"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
            android:drawSelectorOnTop="true"
            android:entries="@array/apis"
            />
      <EditText android:id="@+id/editKey"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:inputType="numberDecimal"
                android:contentDescription="API key"
            />
   </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="15"
                 android:weightSum="100"
         >
      <Spinner
            android:id="@+id/spinnerZoom"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
            android:drawSelectorOnTop="true"
            android:entries="@array/zoom"
            />

   </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="10"
                 android:weightSum="100"
         >
      <EditText android:id="@+id/editTextLatitude"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:inputType="numberDecimal"
                android:contentDescription="Latitude"
                android:text="-34.00931"
            />
      <EditText android:id="@+id/editTextLongitude"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:inputType="numberDecimal"
                android:contentDescription="Longitude"
                android:text="25.6685"
            />
      <Button
            android:id="@+id/buttonOK"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="OK"
            />
   </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="10"
                 android:weightSum="100"
    >
      <EditText android:id="@+id/editTextBottomLatitude"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:inputType="numberDecimal"
            android:contentDescription="Latitude"
            android:text="-34.00931"
       />
      <EditText android:id="@+id/editTextBottomLongitude"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:inputType="numberDecimal"
                android:contentDescription="Longitude"
                android:text="25.6685"
            />
   </LinearLayout>
   <ImageView
         android:id="@+id/imageViewMap"
         android:layout_width="match_parent"
         android:layout_height="0dip"
         android:layout_weight="52"
   >

   </ImageView>

</LinearLayout>
