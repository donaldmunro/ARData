<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="12"
                 android:weightSum="100"
         >
      <TextView android:id="@+id/textIpLabel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="IP Address"
                android:labelFor="@+id/editTextIp"
      />
      <EditText android:id="@+id/editTextIp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:inputType="numberDecimal"
                android:contentDescription="IP Address"
            />
   </LinearLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="0dip"
                 android:layout_weight="13"
                 android:weightSum="100"
    >
      <EditText android:id="@+id/editTextLatitude"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:inputType="numberSigned|numberDecimal"
            android:contentDescription="Latitude"
            android:text="-34.00931"
       />
      <EditText android:id="@+id/editTextLongitude"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:inputType="numberSigned|numberDecimal"
                android:contentDescription="Longitude"
                android:text="25.6685"
            />
      <Button
            android:id="@+id/buttonOK"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="OK"
            />
   </LinearLayout>
   <ImageView
         android:id="@+id/image"
         android:layout_weight="40"
         android:layout_width="wrap_content"
         android:layout_height="0dip"
   />
   <ListView
         android:id="@+id/listViewResults"
         android:layout_width="wrap_content"
         android:layout_height="0dip"
         android:layout_weight="35"
   >

   </ListView>

</LinearLayout>
